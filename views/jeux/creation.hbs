{{!-- Formulaire de création d'un jeu --}}
<section>
    <h1>Créer un nouveau jeu</h1>
    
    <div class="form-container">
        <form action="/jeux" method="POST">
            <div class="form-group">
                <label for="titre">Titre du jeu:</label>
                <input type="text" id="titre" name="titre" placeholder="Ex: The Legend of Zelda" required />
                <small>Le nom du jeu à créer</small>
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" placeholder="Décrivez votre jeu..." required></textarea>
                <small>Donnez une description détaillée du jeu</small>
            </div>

            <div class="form-group">
                <label for="dateSortie">Date de sortie:</label>
                <input type="date" id="dateSortie" name="dateSortie" required />
                <small>Date officielle de lancement</small>
            </div>

            <div class="form-group">
                <label for="genre">Genre:</label>
                <select id="genre" name="genre" required>
                    <option value="">-- Sélectionnez un genre --</option>
                    {{#each genres}}
                        <option value="{{id}}">{{nom}}</option>
                    {{/each}}
                </select>
                <small>Catégorie du jeu</small>
            </div>

            <div class="form-group">
                <label for="editeur">Éditeur:</label>
                <select id="editeur" name="editeur" required>
                    <option value="">-- Sélectionnez un éditeur --</option>
                    {{#each editeurs}}
                        <option value="{{id}}">{{nom}}</option>
                    {{/each}}
                </select>
                <small>Maison d'édition responsable</small>
            </div>

            <div class="form-group">
                <div class="checkbox-group">
                    <input type="checkbox" id="MisEnAvant" name="MisEnAvant" />
                    <label for="MisEnAvant">Mettre en avant ce jeu</label>
                </div>
                <small>Apparaîtra sur la page d'accueil si coché</small>
            </div>

            <div class="action-group" style="gap: var(--spacing-lg);">
                <button type="submit" class="btn btn-success" style="flex: 2;">Créer le jeu</button>
                <a href="/jeux" class="btn btn-secondary" style="flex: 1; padding: var(--spacing-xs) var(--spacing-md); text-align: center;">Annuler</a>
            </div>
        </form>
    </div>
</section>