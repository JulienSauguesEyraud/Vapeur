<h1>Créer un nouveau jeu</h1>
<form action="/jeux" method="POST">
    <label for="titre">Titre:</label>
    <input type="text" id="titre" name="titre" required />

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea>

    <label for="dateSortie">Date de sortie:</label>
    <input type="date" id="dateSortie" name="dateSortie" required />

    <label for="genre">Genre:</label>
    <select id="genre" name="genre" required>
        {{#each genres}}
            <option value="{{id}}">{{nom}}</option>
        {{/each}}
    </select>

    <label for="editeur">Éditeur:</label>
    <select id="editeur" name="editeur" required>
        {{#each editeurs}}
            <option value="{{id}}">{{nom}}</option>
        {{/each}}
    </select>

    <button type="submit">Créer le jeu</button>
</form>

<a href="/jeux">Annuler</a>